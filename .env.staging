# MITA Finance - Staging Environment Configuration

# ========================================
# ENVIRONMENT SETTINGS
# ========================================
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=DEBUG

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL=postgresql+asyncpg://postgres:staging_password_123@postgres:5432/mita_staging
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging_password_123
POSTGRES_DB=mita_staging
POSTGRES_PORT=5432

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_URL=redis://:staging_redis_pass@redis:6379/1
REDIS_PASSWORD=staging_redis_pass
REDIS_PORT=6379

# ========================================
# SECURITY & AUTHENTICATION
# ========================================
JWT_SECRET=staging_jwt_secret_32_chars_minimum_required_here
JWT_PREVIOUS_SECRET=previous_staging_jwt_secret_for_rotation_test
SECRET_KEY=staging_secret_key_32_chars_minimum_required_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ========================================
# EXTERNAL SERVICES
# ========================================
OPENAI_API_KEY=STAGING_OPENAI_API_KEY
OPENAI_MODEL=gpt-4o-mini

# Firebase/Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=/app/secrets/firebase-service-account-staging.json

# Apple App Store
APPSTORE_SHARED_SECRET=STAGING_APPSTORE_SHARED_SECRET

# Apple Push Notifications
APNS_KEY=/app/secrets/apns-key-staging.p8
APNS_KEY_ID=STAGING_APNS_KEY_ID
APNS_TEAM_ID=STAGING_APNS_TEAM_ID
APNS_TOPIC=com.mita.finance.staging
APNS_USE_SANDBOX=true

# ========================================
# EMAIL CONFIGURATION
# ========================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=STAGING_SENDGRID_API_KEY
SMTP_FROM=noreply-staging@mita.finance

# ========================================
# MONITORING & LOGGING
# ========================================
SENTRY_DSN=STAGING_SENTRY_DSN
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# ========================================
# CORS & SECURITY
# ========================================
ALLOWED_ORIGINS=https://staging.mita.finance,https://staging-admin.mita.finance

# ========================================
# INFRASTRUCTURE
# ========================================
BACKEND_PORT=8000
GRAFANA_PASSWORD=staging_grafana_password

# ========================================
# BACKUP & STORAGE
# ========================================
AWS_ACCESS_KEY_ID=STAGING_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=STAGING_AWS_SECRET_KEY
AWS_DEFAULT_REGION=us-east-1
BACKUP_BUCKET=mita-staging-backups

# ========================================
# KUBERNETES & DEPLOYMENT
# ========================================
NAMESPACE=mita-staging
CLUSTER_NAME=mita-staging-cluster