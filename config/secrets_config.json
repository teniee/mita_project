{
  "version": "1.0",
  "environment": "production",
  "providers": ["kubernetes", "aws_secrets_manager", "environment"],
  "compliance_framework": ["SOX", "PCI_DSS", "GDPR"],
  "audit_log_file": "/var/log/mita/secrets_audit.log",
  "emergency_contacts": {
    "primary": "devops@mita.finance",
    "security": "security@mita.finance",
    "compliance": "compliance@mita.finance"
  },
  "aws": {
    "region": "us-east-1",
    "secret_prefix": "mita/production/"
  },
  "gcp": {
    "project_id": "mita-finance-prod",
    "secret_prefix": "mita-"
  },
  "kubernetes": {
    "namespace": "mita-production",
    "secret_name": "mita-secrets"
  },
  "secrets": {
    "database_url": {
      "category": "critical",
      "provider": "kubernetes",
      "rotation_interval_days": 90,
      "compliance_tags": ["SOX", "PCI_DSS"],
      "description": "PostgreSQL database connection string",
      "emergency_contact": "devops@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "DATABASE_URL"
    },
    "jwt_secret": {
      "category": "critical",
      "provider": "kubernetes",
      "rotation_interval_days": 30,
      "compliance_tags": ["SOX", "PCI_DSS"],
      "description": "JWT token signing secret",
      "emergency_contact": "security@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "JWT_SECRET"
    },
    "jwt_previous_secret": {
      "category": "critical",
      "provider": "kubernetes",
      "rotation_interval_days": 30,
      "compliance_tags": ["SOX", "PCI_DSS"],
      "description": "Previous JWT secret for token migration",
      "emergency_contact": "security@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "JWT_PREVIOUS_SECRET"
    },
    "secret_key": {
      "category": "critical",
      "provider": "kubernetes",
      "rotation_interval_days": 90,
      "compliance_tags": ["SOX", "PCI_DSS"],
      "description": "Application secret key for encryption",
      "emergency_contact": "security@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "SECRET_KEY"
    },
    "redis_url": {
      "category": "high",
      "provider": "kubernetes",
      "rotation_interval_days": 90,
      "compliance_tags": ["PCI_DSS"],
      "description": "Redis connection string for caching and sessions",
      "emergency_contact": "devops@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "REDIS_URL"
    },
    "redis_password": {
      "category": "high",
      "provider": "kubernetes",
      "rotation_interval_days": 90,
      "compliance_tags": ["PCI_DSS"],
      "description": "Redis authentication password",
      "emergency_contact": "devops@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "REDIS_PASSWORD"
    },
    "openai_api_key": {
      "category": "high",
      "provider": "kubernetes",
      "rotation_interval_days": 60,
      "compliance_tags": ["DATA_PROTECTION", "GDPR"],
      "description": "OpenAI API key for AI features",
      "emergency_contact": "devops@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "OPENAI_API_KEY"
    },
    "firebase_service_account": {
      "category": "high",
      "provider": "kubernetes",
      "rotation_interval_days": 180,
      "compliance_tags": ["GDPR", "DATA_PROTECTION"],
      "description": "Firebase service account JSON for authentication",
      "emergency_contact": "devops@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "GOOGLE_APPLICATION_CREDENTIALS",
      "file_secret": true
    },
    "appstore_shared_secret": {
      "category": "medium",
      "provider": "kubernetes",
      "rotation_interval_days": 180,
      "compliance_tags": ["PCI_DSS"],
      "description": "Apple App Store shared secret for IAP validation",
      "emergency_contact": "devops@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "APPSTORE_SHARED_SECRET"
    },
    "smtp_password": {
      "category": "medium",
      "provider": "kubernetes",
      "rotation_interval_days": 120,
      "compliance_tags": ["GDPR"],
      "description": "SMTP password for email services",
      "emergency_contact": "devops@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "SMTP_PASSWORD"
    },
    "smtp_username": {
      "category": "medium",
      "provider": "kubernetes",
      "rotation_interval_days": 120,
      "compliance_tags": ["GDPR"],
      "description": "SMTP username for email services",
      "emergency_contact": "devops@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "SMTP_USERNAME"
    },
    "apns_key": {
      "category": "medium",
      "provider": "kubernetes",
      "rotation_interval_days": 365,
      "compliance_tags": ["GDPR"],
      "description": "Apple Push Notification Service key",
      "emergency_contact": "devops@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "APNS_KEY",
      "file_secret": true
    },
    "apns_key_id": {
      "category": "medium",
      "provider": "kubernetes",
      "rotation_interval_days": 365,
      "compliance_tags": ["GDPR"],
      "description": "Apple Push Notification Service key ID",
      "emergency_contact": "devops@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "APNS_KEY_ID"
    },
    "apns_team_id": {
      "category": "medium",
      "provider": "kubernetes",
      "rotation_interval_days": 365,
      "compliance_tags": ["GDPR"],
      "description": "Apple Push Notification Service team ID",
      "emergency_contact": "devops@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "APNS_TEAM_ID"
    },
    "sentry_dsn": {
      "category": "low",
      "provider": "kubernetes",
      "rotation_interval_days": 180,
      "compliance_tags": ["GDPR"],
      "description": "Sentry DSN for error monitoring",
      "emergency_contact": "devops@mita.finance",
      "backup_providers": ["environment"],
      "env_var": "SENTRY_DSN"
    },
    "aws_access_key_id": {
      "category": "high",
      "provider": "kubernetes",
      "rotation_interval_days": 90,
      "compliance_tags": ["SOX", "PCI_DSS"],
      "description": "AWS access key for backups and storage",
      "emergency_contact": "devops@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "AWS_ACCESS_KEY_ID"
    },
    "aws_secret_access_key": {
      "category": "high",
      "provider": "kubernetes",
      "rotation_interval_days": 90,
      "compliance_tags": ["SOX", "PCI_DSS"],
      "description": "AWS secret key for backups and storage",
      "emergency_contact": "devops@mita.finance",
      "backup_providers": ["aws_secrets_manager"],
      "env_var": "AWS_SECRET_ACCESS_KEY"
    },
    "grafana_password": {
      "category": "medium",
      "provider": "kubernetes",
      "rotation_interval_days": 90,
      "compliance_tags": ["INTERNAL"],
      "description": "Grafana admin password for monitoring",
      "emergency_contact": "devops@mita.finance",
      "backup_providers": ["environment"],
      "env_var": "GRAFANA_PASSWORD"
    }
  },
  "rotation_schedule": {
    "critical_secrets": "0 2 * * 0",
    "high_secrets": "0 3 * * 0", 
    "medium_secrets": "0 4 * * 0",
    "low_secrets": "0 5 * * 0"
  },
  "monitoring": {
    "prometheus_metrics": true,
    "slack_alerts": true,
    "pagerduty_critical": true,
    "audit_log_retention_days": 2555
  },
  "compliance_rules": {
    "max_access_attempts": 5,
    "access_rate_limit_per_hour": 100,
    "require_mfa_for_rotation": true,
    "encrypt_secrets_at_rest": true,
    "encrypt_secrets_in_transit": true,
    "log_all_access": true
  }
}