# =====================================================================
# MITA Finance Application - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# =====================================================================

# Database Configuration (Required)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/mita

# Redis Configuration (Required)
REDIS_URL=redis://localhost:6379/0

# Security Configuration (Required - Generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-min-32-chars-generate-with-openssl-rand
SECRET_KEY=your-secret-key-min-32-chars-generate-with-openssl-rand

# Environment
ENVIRONMENT=development

# External API Keys (Optional for local dev)
OPENAI_API_KEY=sk-your-openai-api-key-here
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-service-account.json

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=mita-uploads

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Rate Limiting
RATE_LIMIT_ENABLED=true
