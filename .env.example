# MITA Finance - Environment Configuration Template
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the appropriate values for each environment

# ========================================
# ENVIRONMENT SETTINGS
# ========================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL connection string
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password@localhost:5432/mita
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=mita
POSTGRES_PORT=5432

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_URL=redis://:your_redis_password@localhost:6379/0
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379

# ========================================
# SECURITY & AUTHENTICATION
# ========================================
# JWT Configuration - CRITICAL: Use strong, unique secrets in production
JWT_SECRET=your_jwt_secret_here_must_be_32_chars_minimum
JWT_PREVIOUS_SECRET=your_previous_jwt_secret_for_rotation
SECRET_KEY=your_secret_key_here_must_be_32_chars_minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# EXTERNAL SERVICES
# ========================================
# OpenAI API
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Firebase/Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=/app/secrets/firebase-service-account.json
FIREBASE_JSON={"type":"service_account","project_id":"your-project"}

# Apple App Store
APPSTORE_SHARED_SECRET=your_app_store_shared_secret

# Apple Push Notifications
APNS_KEY=/app/secrets/apns-key.p8
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apple_team_id
APNS_TOPIC=com.mita.finance
APNS_USE_SANDBOX=true

# ========================================
# EMAIL CONFIGURATION
# ========================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your_sendgrid_api_key
SMTP_FROM=noreply@mita.finance

# ========================================
# MONITORING & LOGGING
# ========================================
# Sentry for error tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Prometheus metrics
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# ========================================
# CORS & SECURITY
# ========================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://app.mita.finance,https://admin.mita.finance

# ========================================
# INFRASTRUCTURE
# ========================================
BACKEND_PORT=8000
GRAFANA_PASSWORD=your_secure_grafana_password

# ========================================
# BACKUP & STORAGE
# ========================================
# AWS S3 for backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
BACKUP_BUCKET=mita-production-backups

# ========================================
# KUBERNETES & DEPLOYMENT
# ========================================
NAMESPACE=mita-production
CLUSTER_NAME=mita-prod-cluster